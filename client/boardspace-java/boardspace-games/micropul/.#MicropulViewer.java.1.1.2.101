    static int SUBCELL = 4;
    public int setLocalBoundsSize(int width, int height,boolean wide,boolean tall)
    {
        int sncols = (11*SUBCELL + (tall?22:(wide ? 34 : 30))); // more cells wide to allow for the aux displays
        int chatHeight = selectChatHeight(height);
        int snrows = 10*SUBCELL+(tall?20:10);  
        int cellw = width / sncols;
        int cellh = (height-(wide ? 0 : chatHeight)) / snrows;
        CELLSIZE = Math.max(1,Math.min(cellw, cellh)); //cell size appropriate for the aspect ration of the canvas
        return(CELLSIZE);
    }
    int playerWidth(boolean horizontal) { return(horizontal ? 33 : 20); }
    public void createPlayerGroup(commonPlayer p0,boolean alignLeft,boolean horizontal,
    		int x,int y,int rackW,int rackH,
    		Rectangle chipRect,Rectangle scoreRect,
    		Rectangle rackRect,Rectangle extRect,
    		boolean wide,
    		Rectangle jewelRect)
    {
    	int CELL32 = (3*CELLSIZE)/2;
    	int playerW = CELLSIZE*playerWidth(horizontal);
    	if(horizontal) { playerW = Math.max(playerW, rackH+rackW*2); }
    	G.SetRect(chipRect,	alignLeft||horizontal?x:x+playerW-rackW, 
    			horizontal ? y+CELLSIZE*7: y,rackW,rackW);
    	
    	Rectangle p0name = p0.nameRect;
    	Rectangle p0time = p0.timeRect;
    	Rectangle p0pic = p0.picRect;
    	Rectangle p0anim = p0.animRect;
    	Rectangle p0xtime = p0.extraTimeRect;
    	G.SetRect(p0name,
    		horizontal?x:alignLeft ? G.Right(chipRect)+CELLSIZE/2:x,y,
    		CELLSIZE * 8,CELL32);

 
    	// time display for first player
    	G.SetRect(p0time,G.Left( p0name),G.Bottom(p0name), CELLSIZE * 5, CELL32);
    
    	G.AlignLeft(p0xtime, G.Bottom(p0time),p0time);
    	
    	// first player portrait
    	G.SetRect(p0pic, G.Right(p0name),G.Top(p0name),CELLSIZE * 7, CELLSIZE * 7);

    	// first player "i'm alive" animation ball
    	G.SetRect(p0anim, G.Right(p0time),G.Top( p0time),G.Height( p0time),G.Height( p0time));
 
    	G.SetRect(scoreRect,G.Left( p0time), G.Bottom(p0xtime)+CELLSIZE/2,
    			CELLSIZE*2,CELLSIZE*2);
    	
        G.SetRect(rackRect,
        		horizontal?G.Right(chipRect):alignLeft ? x : x+playerW-rackW, 
        		horizontal?G.Top(chipRect):G.Bottom(chipRect),
        		horizontal?rackH:rackW,
        		horizontal?rackW:rackH);   
	
        G.SetRect(extRect, G.Right(scoreRect)+CELLSIZE/2,
        		G.Top( scoreRect),
        		CELLSIZE*6-CELLSIZE/2,
        		G.Height( scoreRect));
        
        G.SetRect(jewelRect,
        		horizontal||wide?G.Right(rackRect):G.Left( rackRect),
        		horizontal ? G.Top(rackRect) : G.Bottom(rackRect)-(wide?rackW:0),
        		rackW,rackW);
        
        G.SetRect(p0.playerBox, x, y, playerW, (horizontal|wide?G.Bottom(rackRect) : G.Bottom(extRect))-y);
    }
    
    public void setLocalBoundsWT(int x, int y, int width, int height,boolean wideMode,boolean tallMode)
    {  
    	int SQUARESIZE = CELLSIZE*SUBCELL;
        int ideal_logwidth = CELLSIZE * 30;
    	int CELL32 = (3*CELLSIZE)/2;
    	int C2 = CELLSIZE/2;
        int chatHeight = selectChatHeight(height);
        boolean noChat = chatHeight==0;
        int chatWW = 42*CELLSIZE;
        int rackW = SQUARESIZE;
        int rackH = SQUARESIZE*6;
        
        int boardX = wideMode||tallMode ? C2 : rackW+CELLSIZE;
        int boardW = wideMode ? width-boardX*2-chatWW-CELLSIZE: width-boardX*2;
        int chatX = wideMode ? boardW+2*boardX+CELLSIZE : x+C2;
        int chatW = tallMode ? width-CELLSIZE : wideMode ? chatWW-CELLSIZE : Math.min(boardW,width-ideal_logwidth-CELLSIZE);
        int logX = noChat||tallMode 
					? noChat&&tallMode ? CELLSIZE*12 : CELLSIZE*48 
					: wideMode 
        				? chatX 
        				: chatX+chatW+C2;
        int logY = tallMode ? chatHeight+y+CELLSIZE*3 : y;
        int logH = noChat 
        			? CELLSIZE*9 
        			: tallMode|wideMode ? chatHeight/2 : chatHeight;
        int logW = Math.min(ideal_logwidth,width-logX-C2);
        //
        // set up player rectangles
        G.SetRect( fullRect,x,y,width,height);
        

        commonPlayer pl0 =getPlayerOrTemp(0);
        commonPlayer pl1 = getPlayerOrTemp(1);
        int playerX = wideMode ? chatX : C2;
        int playerY = tallMode?logY+logH+CELLSIZE:wideMode ? y+logH+C2 : chatHeight+CELLSIZE*2;

        int p1X = width-CELLSIZE*playerWidth(tallMode)-C2;
        
        if(noChat)
        {
        	if(logX+logW+CELLSIZE>p1X)
        	{
        		playerY = Math.max(logY+logH+C2, playerY);
        	}
        }
        createPlayerGroup(pl0,true,tallMode,playerX,playerY,
        		rackW,rackH,
        		firstPlayerChipRect,firstPlayerScoreRect,
        		firstPlayerRack,firstPlayerExtRect,wideMode,firstPlayerJewelRect);
        
        createPlayerGroup(pl1,wideMode,tallMode,p1X,playerY,
        		rackW,rackH,
        		secondPlayerChipRect,secondPlayerScoreRect,
        		secondPlayerRack,secondPlayerExtRect,wideMode,secondPlayerJewelRect);
        
        int chatY = tallMode 
    			? y+C2
    			:wideMode ? G.Bottom(secondPlayerRack)+C2: y;
        G.SetRect(chatRect,chatX, 		chatY,
        				chatW,	wideMode ? height-chatY-CELLSIZE : chatHeight);

    
        // "edit" rectangle, available in reviewers to switch to puzzle mode
        G.SetRect(editRect, 
        		tallMode ? CELLSIZE*2
        			:wideMode ? G.Right(firstPlayerRack)+CELLSIZE*8 : G.Right(pl0.playerBox)+CELLSIZE*2,
        		tallMode ? logY+C2 
        				: wideMode ? G.Bottom(pl0.playerBox)-20*CELLSIZE
        						:playerY+CELLSIZE*2,
        		CELLSIZE*8, CELLSIZE*3);

        int board_y = wideMode ? CELLSIZE*2 : G.Bottom(pl0.playerBox)+C2;

        G.SetRect(boardRect,boardX,board_y,boardW,height-board_y-2*CELLSIZE-(tallMode?C2:0));

        
        G.SetRect(stateRect, CELLSIZE, (wideMode||tallMode ? 0 : chatHeight)+CELLSIZE/3,G.Width( boardRect) - CELLSIZE, CELL32);

        G.SetRect(logRect,logX,logY,
        		logW,logH);

        G.SetRect(goalRect,G.Left( boardRect)+3*SQUARESIZE,G.Bottom(boardRect),
        		G.Width(boardRect)-6*SQUARESIZE,CELLSIZE*2);
        
        setProgressRect(progressRect,goalRect);
         
        int chipX = tallMode 
        			?(G.Right(pl0.playerBox)+G.Left(pl1.playerBox))/2-SQUARESIZE:
        			wideMode ? G.Left(doneRect) : G.Right(doneRect)+CELLSIZE*2;
       
		// a pool of chips for the first player at the top
        G.SetRect(chipRect, 
        		chipX,
        		tallMode ? playerY : wideMode ? G.Bottom(doneRect)+CELLSIZE: playerY,
        		SQUARESIZE, G.Height(pl0.picRect));
        
        G.SetRect(zoomRect, G.Right(boardRect)-CELLSIZE*10, G.Bottom(boardRect),
        		CELLSIZE*8,G.Height(stateRect));
       

  
        // "done" rectangle, should always be visible, but only active when a move is complete.
        G.AlignXY(doneRect,
        		wideMode||tallMode?G.Left(editRect):G.Right(editRect)+CELLSIZE*2,
        		wideMode||tallMode?G.Bottom(editRect)+CELLSIZE:G.Top(editRect),
        		editRect);
        
      
 
		//this sets up the "vcr cluster" of forward and back controls.
        SetupVcrRects(G.Left(boardRect),G.Bottom(boardRect)-4*CELLSIZE,
            CELLSIZE * 9,
            4 * CELLSIZE);
        positionTheChat(chatRect,Color.white,Color.white);
     	
       generalRefresh();
    }


    // draw the face up chips
    private void DrawRack(Graphics gc,Rectangle r, int player,HitPoint highlight,MicropulBoard gb)
    {
        boolean horizontal = G.Width(r)>G.Height(r);
        int dy = horizontal ? 0 : G.Width(r);
        int dx = horizontal ? G.Height(r) : 0;
        int step = horizontal?dx:dy;
        int ww = 4*step/5;
        MicropulCell tiles[] = gb.rack[player];
        for(int i=0,x=G.Left(r)+step/2,y=G.Top(r)+step/2;i<tiles.length;i++,y+=dy,x+=dx)
        {  	MicropulCell cp = tiles[i];
        	MicropulChip chip = cp.topChip();
            boolean canhit = gb.LegalToHitRack(player,cp);
            HitPoint hitp = canhit ? highlight : null;

        	if(chip!=null)
        	{
        	chip.drawChip(gc,cp.masked?-1:cp.rotation[0],this,ww,x,y,null);
        	}
        	else
        	{
        	StockArt.SmallO.drawChip(gc,this,ww,x,y,null);	
        	}
            if((hitp!=null)
            		&& ((gb.pickedObject!=null)?(chip==null):(chip!=null)))
            {
            if(cp.closestPointToCell(hitp,ww,x,y))
              {
            	highlight.spriteColor = Color.red;
            	if(G.pointInside(hitp, x, y,ww/2))
            	{
            	hitp.arrow = (gb.pickedObject==null)?StockArt.UpArrow:StockArt.DownArrow;	
            	hitp.awidth = ww/2;
            	}
            	else
            	{
            	hitp.hitCode = MicroId.RotateTile;
            	hitp.awidth = ww;
            	hitp.arrow = StockArt.Rotate_CW;
            	hitp.spriteColor = Color.blue;
           		}
              }  
            }}
    }


